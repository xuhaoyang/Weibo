<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="16dp">


    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/lay_16"
        android:background="@color/status_detail_forward" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_retweeted_content"
            style="@style/TextViewBody"
            android:paddingLeft="@dimen/lay_8"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/white" />

        <FrameLayout
            android:id="@+id/layout_forward_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/lay_8"
            android:paddingRight="16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_image_forward"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/userinfo_header"
                android:visibility="gone" />
        </FrameLayout>


    </LinearLayout>

</LinearLayout>