<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xhy.weibo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_my"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.StatusDetailActivity"
            android:label="@string/title_activity_status_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.WriteStatusActivity"
            android:label="@string/title_activity_write_comment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.ViewPicActivity" />
        <activity
            android:name=".activity.UserInfoActivity"
            android:label="@string/title_OtherUserInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.HotsActivity" />
        <activity android:name=".activity.KeepStatusActivity" />
        <activity
            android:name=".activity.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.InitActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NotifyActivity"
            android:label="@string/title_activity_notify"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AtActivity"
            android:label="@string/title_activity_at"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xhy.weibo.activity.MainActivity" />
        </activity>

        <service
            android:name=".service.MessageService"
            android:enabled="true"
            android:exported="true"
            android:label="消息推送"
            android:process=":message" />

        <receiver
            android:name=".receiver.NotificationReceiver"
            android:process=":message" />

        <receiver android:name=".receiver.UpdateToeknReceiver">
            <intent-filter>
                <action android:name="com.xhy.weibo.UPDATE_TOKEN" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.UpdateOtherProcessReceiver"
            android:process=":message">
            <intent-filter>
                <action android:name="com.xhy.weibo.UPDATE_OTHER_PROCESS" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>